# Gemäldeagent Configuration Template
# Copy this file to .env and fill in your values

# ======================================
# DATABASE
# ======================================
DATABASE_URL=sqlite:///data/gemäldeagent.db
DUCKDB_PATH=data/embeddings.duckdb

# ======================================
# VISION & ML MODELS
# ======================================
# Model selection: openai/clip-vit-base-patch32, google/vit-base-patch16-224, etc.
VISION_MODEL=openai/clip-vit-base-patch32
EMBEDDING_DIM=512
DEVICE=cuda  # cuda, mps, or cpu
MODEL_CACHE_DIR=models/

# ======================================
# API CONFIGURATION
# ======================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================================
# OPTIONAL: EXTERNAL APIs
# ======================================
# Google Custom Search (for provenance research)
GOOGLE_CUSTOM_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=

# Reverse image search services (optional)
REVERSE_IMAGE_SEARCH_ENABLED=false

# ======================================
# MARKET MONITORING
# ======================================
MONITORING_ENABLED=true
MONITORING_INTERVAL_MINUTES=60
MONITORING_MAX_ITEMS_PER_SCAN=100

# Marketplace-specific settings
EBAY_API_KEY=
EBAY_APP_ID=
WILLHABEN_ENABLED=true
ETSY_API_KEY=

# Scraping behavior
SCRAPING_DELAY_SECONDS=2
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT_SECONDS=30
USER_AGENT=Mozilla/5.0 (compatible; GemäldeagentBot/1.0)

# ======================================
# DEDUPLICATION
# ======================================
DEDUPLICATION_ENABLED=true
PERCEPTUAL_HASH_THRESHOLD=5  # Hamming distance threshold

# ======================================
# ALERT SYSTEM
# ======================================
ALERT_ENABLED=true

# Alert criteria
ALERT_BARGAIN_THRESHOLD=0.4  # Alert if price < 40% of estimated value
ALERT_MIN_AUTHENTICITY_SCORE=60
ALERT_RARE_STYLES=Impressionism,Post-Impressionism,Expressionism

# Email alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_TO=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=gemäldeagent@example.com

# Telegram alerts (optional)
ALERT_TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ======================================
# REPORT GENERATION
# ======================================
REPORT_FORMAT=pdf  # pdf or docx
REPORT_OUTPUT_DIR=reports/
REPORT_TEMPLATE=default
REPORT_INCLUDE_IMAGES=true
REPORT_LANGUAGE=en  # en or de

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/gemäldeagent.log
LOG_FORMAT=json  # json or text

# ======================================
# FRONTEND
# ======================================
FRONTEND_URL=http://localhost:3000

# ======================================
# SECURITY
# ======================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Upload limits
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,bmp

# ======================================
# DEVELOPMENT
# ======================================
DEBUG=false
TESTING=false
MOCK_MARKETPLACES=true  # Use mock data instead of real scraping
